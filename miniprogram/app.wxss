
page {
    font-family: 'jinkai';
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

.mo {
    min-height: 0;
    overflow: hidden;
}

.ma {
    margin: 0 auto;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.zan {
    width: 300rpx;
    height: 80rpx;
    border-radius: 50px;
    background-image: linear-gradient(135deg, #feb692 0%, #ea5455 100%);
    box-shadow: 0 20px 30px -6px rgba(238, 103, 97, 0.5);
    outline: none;
    border: none;
    margin: 0 auto;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    line-height: 80rpx;
    margin-top: 80rpx;
    margin-bottom: 80rpx;
}
