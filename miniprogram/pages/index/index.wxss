
.box {
	padding: 25rpx;
	background-color: #F6F6F6;
}
.card {
	padding: 50rpx;
	background-color: #fff;
	margin-bottom: 25rpx;
	box-shadow: 0 0 25rpx rgba(0, 0, 0, .06);
	border-radius: 10rpx;
	border: 1rpx solid rgba(0, 0, 0, .2);
}
.title {
	font-size: 44rpx;
	line-height: 1.5;
	margin-bottom: 30rpx;
}
.main {
	font-size: 36rpx;
	line-height: 1.5;
	margin-bottom: 50rpx;
	font-weight: 300;
}
.author {
	font-size: 26rpx;
	line-height: 1.5;
	color: #555;
	font-weight: 300;
}
.date {
	color: #aaa;
	margin-left: 10rpx;
	font-size: 24rpx;
}
.nomore {
	text-align: center;
	font-size: 24rpx;
	color: #999;
	padding: 50rpx 0;
}